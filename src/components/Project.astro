---
import IconLink from '@icons/IconLink.astro'
const { title, techStack = [], url, description } = Astro.props

//const stacks = techStack.map((tech: string) => tech)
---

<li
  class="before:border-1 relative before:absolute before:-left-[1.875rem] before:top-6 before:block before:size-4 before:rounded-full before:border-2 before:border-purple-200/75 before:bg-white before:content-[''] dark:before:border-purple-800/75 dark:before:bg-gray-950"
>
  <h4 class='text-sm font-semibold text-purple-600 dark:text-purple-500'>
    {
      techStack.map((tech: string) => (
        <span class='mr-2 inline-block rounded bg-purple-200 px-2 py-1 text-xs font-semibold text-purple-700 dark:bg-purple-800 dark:text-purple-200'>
          {tech}
        </span>
      ))
    }
  </h4>
  <h5 class='mb-2 font-bold inline-flex gap-1.5'>
    {title}
    {
      url && (
        <>
          <a
            class='font-medium text-purple-700 underline hover:text-purple-700/75'
            href={url}
            target='_blank'
            rel='noopener'
          >
            <IconLink />
          </a>
        </>
      )
    }
  </h5>
  <p class='text-sm/relaxed text-gray-700 dark:text-gray-300'>
    {description}
  </p>
</li>
